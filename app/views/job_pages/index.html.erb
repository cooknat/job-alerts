
 <h1>All Job Pages</h1>
 <h2><%= link_to "Add new page", new_job_page_path %></h2>

 <% @jobPages.each do |jobPage| %>
 <%= p jobPage.id %>
   <p><%= link_to jobPage.name, job_search_path(jobPage.id) %></p>
   <%= jobPage.url %>
   <% if user_is_authorised_to_delete? %>
	   <%= link_to "Delete this job page", jobPage, method: :delete, data: {confirm: 'Are you sure you want to delete this job page?'} %>
	   <%= link_to "Edit this job page", edit_job_page_path(jobPage) %>
	   <%= p jobPage.name %>
   <% end %>
   <br><br>
 <% end %>
